<% include ../includes/header.ejs %>

<% switch(style) { 
  case '1' : %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style1.css" />
<% break; 
  case '2' : %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style2.css" />
<% break; 
  case '3' : %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/style3.css" />
<% break; default: %>
      <link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />
<% } %>

</head>

        <body>
          <% include ../../includes/nav.ejs %>
            <div class="jumbotron text-center">
              <div class="container">
                <h1>
                  <%= title %>
                </h1>
              </div>
            </div>
            <div class="container">
              <div>
                <div>
                  <form action="/ta05/change-style" method="POST">
                    <label for='theme'>Choose your theme</label>
                    <select id="theme" name="theme">
                      <option value='0'>
                        Default (Blue)
                      </option>
                      <option value='1'>
                        Style 1 (Red)
                      </option>
                      <option value='2'>
                        Style 2 (Yellow)
                      </option>
                      <option value='3'>
                        Style 3 (Green)
                      </option>
                    </select>
                    <button type="submit">Change Style</button>
                  </form>
                </div>
               
            
                
              </div>
            </div>


        </body>

        </html>